<datasources>

	<datasource 
		name="railo-infinispan" 
		class="org.h2.Driver" 
		host="localhost" 
		port="3306" 
		database="railo-infinispan"
		username="@dsn.username@" 
		password="@dsn.password@" 
		blob="false"
		clob="false" 
		sqlstoredprocedures="true"
		sqlinsert="true"
		sqlselect="true"
		sqlupdate="true"
		sqldelete="true"
		maintainconnection="true"
		logintimeout="120"
		connectionretries="0"
		connectionlimit="-1"
		connectiontimeout="1"
		custom="path=.%2FWEB-INF%2Frailo%2Frailo-infinispan%2F&amp;amp;mode=MySQL"
		jdbc="mysql"
		jdbcstring="jdbc:h2:{path}{database};MODE={mode}"
		 />

	<datasource 
		name="mangoblog" 
		database="@dsn.mangoblog.database@"
		class="com.mysql.jdbc.Driver" 
		host="${dsn.mangoblog.host}" 
		port="3306" 
		username="@dsn.mangoblog.username@" 
		password="@dsn.mangoblog.password@" 
		blob="false"
		clob="false" 
		sqlstoredprocedures="true"
		sqlinsert="true"
		sqlselect="true"
		sqlupdate="true"
		sqldelete="true"
		maintainconnection="true"
		logintimeout="120"
		connectionretries="0"
		connectionlimit="-1"
		connectiontimeout="1"
		custom="autoReconnect=false&amp;amp;zeroDateTimeBehavior=convertToNull&amp;amp;useOldAliasMetadataBehavior=true&amp;amp;CharacterEncoding=UTF-8&amp;amp;allowMultiQueries=false"
		jdbc="mysql"
		jdbcstring="jdbc:mysql://${dsn.mangoblog.host}:3306/mangoblog"
		 />
</datasources>